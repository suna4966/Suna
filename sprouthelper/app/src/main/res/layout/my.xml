<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottomBar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/my"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김뱅크"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="170dp"
                    android:textSize="24dp"
                    android:fontFamily="@font/pretendard_semibold"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 소비 리포트"
                android:layout_marginTop="200dp"
                android:textSize="16dp"
                android:fontFamily="@font/pretendard_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 지출 금액"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가장 많이 쓴 카테고리"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 챌린지"
                android:layout_marginTop="320dp"
                android:textSize="16dp"
                android:textColor="#767676"
                android:fontFamily="@font/pretendard_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 주 미션"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="절약 팁"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:layout_marginTop="440dp"
                android:textSize="16dp"
                android:textColor="#767676"
                android:fontFamily="@font/pretendard_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장한 카드/뉴스"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 챌린지"
                android:layout_marginTop="520dp"
                android:textSize="16dp"
                android:textColor="#767676"
                android:fontFamily="@font/pretendard_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예산 설정"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심사 재설정"
                android:layout_marginTop="590dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보 수정"
                android:layout_marginTop="630dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/bottomBarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/underbox"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/homeoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homeoff" />
            <ImageView
                android:id="@+id/caloff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/caloff" />
            <ImageView
                android:id="@+id/monoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monoff" />
            <ImageView
                android:id="@+id/chatoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/chatoff" />
            <ImageView
                android:id="@+id/myon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/myon" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>