<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottomBar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/mole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mole"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                android:background="#fafafa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신용카드"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/checkcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체크카드"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="280dp"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="20dp"
                android:textColor="#8c8c8c"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cline"
                android:layout_marginTop="100dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shortl"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천카드"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/black"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="18dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="99dp"
                    android:src="@drawable/c6"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#25958B"
                        android:textSize="16dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="1위"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="마트,편의점10%할인"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8c8c8c"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="신한카드 Mr.Life"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="99dp"
                    android:src="@drawable/c7"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#25958B"
                        android:textSize="16dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="2위"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="대중교통10%할인"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8c8c8c"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="삼성카드 taptap O"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="460dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="99dp"
                    android:src="@drawable/c8"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#25958B"
                        android:textSize="16dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="3위"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="국내외 가맹점1.5%적립"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8c8c8c"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="현대카드 M"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="18dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="99dp"
                    android:src="@drawable/c9"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#25958B"
                        android:textSize="16dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="4위"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="SKYPASS최대 2마일리지적립"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8c8c8c"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="우리카드 카드의정석 EVERY MILE SKYPASS"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="740dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="99dp"
                    android:src="@drawable/c10"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#25958B"
                        android:textSize="16dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="5위"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="온라인1.5%할인"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8c8c8c"
                        android:textSize="14dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="롯데카드 LOCA LIKIT 1.2"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/bottomBarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/underbox"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/homeon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homeon" />
            <ImageView
                android:id="@+id/caloff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/caloff" />
            <ImageView
                android:id="@+id/monoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monoff" />
            <ImageView
                android:id="@+id/chatoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/chatoff" />
            <ImageView
                android:id="@+id/myoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/myoff" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>