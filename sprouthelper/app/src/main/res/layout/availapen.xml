<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottomBar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageButton
                android:id="@+id/mole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/mole"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/wb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우리은행"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="15dp"
                android:textSize="24dp"
                android:fontFamily="@font/pretendard_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우리 Oh!(5) 클릭 대출"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:fontFamily="@font/pretendard_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.67%"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="15dp"
                android:textSize="24dp"
                android:fontFamily="@font/pretendard_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,650만원"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="130dp"
                android:textSize="24dp"
                android:fontFamily="@font/pretendard_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품안내"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="15dp"
                android:textSize="22dp"
                android:textColor="#767676"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출 금리"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="#8c8c8c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연 12.6%~19.9%"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우대금리"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:layout_marginTop="440dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출 한도"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="#8c8c8c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,650만원~8,000만원"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출 기간"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최대 36개월\n대출금액별 상환기간 차등"
                android:layout_marginTop="580dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금리 유형"
                android:layout_marginTop="640dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="#8c8c8c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고정금리"
                android:layout_marginTop="670dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출상환방법"
                android:layout_marginTop="710dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원리금균등분할상환, 원금균등분할상환"
                android:layout_marginTop="740dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:textSize="16dp"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/pretendard_medium"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/bottomBarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/underbox"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/homeon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/homeon" />
            <ImageView
                android:id="@+id/caloff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/caloff" />
            <ImageView
                android:id="@+id/monoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monoff" />
            <ImageView
                android:id="@+id/chatoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/chatoff" />
            <ImageView
                android:id="@+id/myoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/myoff" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>